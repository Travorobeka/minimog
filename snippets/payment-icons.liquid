{% if section.settings.image_custom_payment == blank %}
  <div class="m-payment-icons" 
       style="justify-content: {{ section.settings.payment_icon_alignment | default: 'left' }}; text-align: {{ section.settings.payment_icon_alignment | default: 'left' }};">
    <span class="m:hidden">{{ 'general.payment.options' | t }}: </span>
    <ul class="m-payment-icons--list m:flex m:flex-wrap{{ classes | prepend: ' ' }}"
        style="gap: {{ section.settings.payment_icon_spacing | default: 10 }}px; justify-content: {{ section.settings.payment_icon_alignment | default: 'left' }};">
      {%- for type in shop.enabled_payment_types -%}
        <li class="m-payment-icons--item"
            style="width: {{ section.settings.payment_icon_size | default: 40 }}px; height: {{ section.settings.payment_icon_size | default: 40 }}px; border-radius: {{ section.settings.payment_icon_border_radius | default: 4 }}px; overflow: hidden; display: flex; align-items: center; justify-content: center;{% if section.settings.payment_icon_grayscale %} filter: grayscale(100%);{% endif %}">
          {{ type | payment_type_svg_tag: class: 'icon icon--full-color' }}
        </li>
      {%- endfor -%}
    </ul>
  </div>
{% else %}
  <div style="width: {{ section.settings.payment_icons_width }}px; text-align: {{ section.settings.payment_icon_alignment | default: 'left' }};">
    {% render 'responsive-image', image: section.settings.image_custom_payment %}
  </div>
{% endif %}
