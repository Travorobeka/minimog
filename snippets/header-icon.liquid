{%- liquid
  comment 'Header Icon Snippet - Customizable icons for header'
  comment 'Parameters: icon_type, icon_name, class, attributes'
  
  assign stroke_width = settings.icon_stroke_width | default: 1.5
  assign icon_size = settings.icon_size | default: 20
  assign icon_style = settings.icon_style | default: 'outline'
  
  assign base_class = class | default: 'm-svg-icon--medium'
  assign icon_attributes = attributes | default: ''
-%}

{%- case icon_type -%}
  {%- when 'search' -%}
    {%- case icon_name -%}
      {%- when 'magnifying_glass' -%}
        <svg class="{{ base_class }}" {{ icon_attributes }} fill="none" stroke="currentColor" stroke-width="{{ stroke_width }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" style="width: var(--header-icon-size); height: var(--header-icon-size);">
          {%- if icon_style == 'filled' -%}
            <path fill="currentColor" d="M9.5 3C13.0899 3 16 5.91015 16 9.5C16 11.11 15.41 12.59 14.44 13.73L14.71 14H15.5L20.5 19L19 20.5L14 15.5V14.71L13.73 14.44C12.59 15.41 11.11 16 9.5 16C5.91015 16 3 13.0899 3 9.5C3 5.91015 5.91015 3 9.5 3ZM9.5 5C7.01472 5 5 7.01472 5 9.5C5 11.9853 7.01472 14 9.5 14C11.9853 14 14 11.9853 14 9.5C14 7.01472 11.9853 5 9.5 5Z"/>
          {%- else -%}
            <circle cx="11" cy="11" r="8"></circle><path d="m21 21-4.35-4.35"></path>
          {%- endif -%}
        </svg>
      {%- when 'search_circle' -%}
        <svg class="{{ base_class }}" {{ icon_attributes }} fill="none" stroke="currentColor" stroke-width="{{ stroke_width }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" style="width: var(--header-icon-size); height: var(--header-icon-size);">
          <circle cx="11" cy="11" r="8"></circle><circle cx="11" cy="11" r="3"></circle><path d="m21 21-4.35-4.35"></path>
        </svg>
      {%- when 'loupe' -%}
        <svg class="{{ base_class }}" {{ icon_attributes }} fill="none" stroke="currentColor" stroke-width="{{ stroke_width }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" style="width: var(--header-icon-size); height: var(--header-icon-size);">
          <circle cx="11" cy="11" r="8"></circle><rect x="8" y="8" width="6" height="6" rx="1"></rect><path d="m21 21-4.35-4.35"></path>
        </svg>
      {%- when 'find' -%}
        <svg class="{{ base_class }}" {{ icon_attributes }} fill="none" stroke="currentColor" stroke-width="{{ stroke_width }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" style="width: var(--header-icon-size); height: var(--header-icon-size);">
          <circle cx="10" cy="10" r="7"></circle><path d="M10 6v8l4-4-4-4"></path><path d="m20 20-4-4"></path>
        </svg>
    {%- endcase -%}
    
  {%- when 'cart' -%}
    {%- case icon_name -%}
      {%- when 'shopping_bag' -%}
        <svg class="{{ base_class }}" {{ icon_attributes }} fill="none" stroke="currentColor" stroke-width="{{ stroke_width }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" style="width: var(--header-icon-size); height: var(--header-icon-size);">
          {%- if icon_style == 'filled' -%}
            <path fill="currentColor" d="M19 7h-2V6a5 5 0 0 0-10 0v1H5a1 1 0 0 0-1 1v11a3 3 0 0 0 3 3h10a3 3 0 0 0 3-3V8a1 1 0 0 0-1-1zM9 6a3 3 0 0 1 6 0v1H9V6zm6 6a1 1 0 0 1-2 0v-1a1 1 0 0 1 2 0v1zm-4 0a1 1 0 0 1-2 0v-1a1 1 0 0 1 2 0v1z"/>
          {%- else -%}
            <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path><line x1="3" y1="6" x2="21" y2="6"></line><path d="M16 10a4 4 0 0 1-8 0"></path>
          {%- endif -%}
        </svg>
      {%- when 'shopping_cart' -%}
        <svg class="{{ base_class }}" {{ icon_attributes }} fill="none" stroke="currentColor" stroke-width="{{ stroke_width }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" style="width: var(--header-icon-size); height: var(--header-icon-size);">
          <circle cx="8" cy="21" r="1"></circle><circle cx="19" cy="21" r="1"></circle><path d="M2.05 2.05h2l2.66 12.42a2 2 0 0 0 2 1.58h9.78a2 2 0 0 0 1.95-1.57l1.65-7.43H5.12"></path>
        </svg>
      {%- when 'basket' -%}
        <svg class="{{ base_class }}" {{ icon_attributes }} fill="none" stroke="currentColor" stroke-width="{{ stroke_width }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" style="width: var(--header-icon-size); height: var(--header-icon-size);">
          <path d="M3 11h18l-2 8H5l-2-8z"></path><path d="M9 11V7a3 3 0 0 1 6 0v4"></path><line x1="3" y1="11" x2="21" y2="11"></line>
        </svg>
      {%- when 'bag_simple' -%}
        <svg class="{{ base_class }}" {{ icon_attributes }} fill="none" stroke="currentColor" stroke-width="{{ stroke_width }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" style="width: var(--header-icon-size); height: var(--header-icon-size);">
          <rect x="4" y="6" width="16" height="14" rx="2"></rect><path d="M8 6V4a2 2 0 0 1 4 0v2"></path>
        </svg>
    {%- endcase -%}
    
  {%- when 'account' -%}
    {%- case icon_name -%}
      {%- when 'user_circle' -%}
        <svg class="{{ base_class }}" {{ icon_attributes }} fill="none" stroke="currentColor" stroke-width="{{ stroke_width }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" style="width: var(--header-icon-size); height: var(--header-icon-size);">
          {%- if icon_style == 'filled' -%}
            <path fill="currentColor" d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 3c1.66 0 3 1.34 3 3s-1.34 3-3 3-3-1.34-3-3 1.34-3 3-3zm0 14.2c-2.5 0-4.71-1.28-6-3.22.03-1.99 4-3.08 6-3.08 1.99 0 5.97 1.09 6 3.08-1.29 1.94-3.5 3.22-6 3.22z"/>
          {%- else -%}
            <circle cx="12" cy="12" r="10"></circle><circle cx="12" cy="10" r="3"></circle><path d="M7 20.662V19a2 2 0 0 1 2-2h6a2 2 0 0 1 2 2v1.662"></path>
          {%- endif -%}
        </svg>
      {%- when 'user_profile' -%}
        <svg class="{{ base_class }}" {{ icon_attributes }} fill="none" stroke="currentColor" stroke-width="{{ stroke_width }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" style="width: var(--header-icon-size); height: var(--header-icon-size);">
          <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle>
        </svg>
      {%- when 'person' -%}
        <svg class="{{ base_class }}" {{ icon_attributes }} fill="none" stroke="currentColor" stroke-width="{{ stroke_width }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" style="width: var(--header-icon-size); height: var(--header-icon-size);">
          <circle cx="12" cy="8" r="5"></circle><path d="M20 21a8 8 0 1 0-16 0"></path>
        </svg>
      {%- when 'account_simple' -%}
        <svg class="{{ base_class }}" {{ icon_attributes }} fill="none" stroke="currentColor" stroke-width="{{ stroke_width }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" style="width: var(--header-icon-size); height: var(--header-icon-size);">
          <rect x="3" y="4" width="18" height="16" rx="2"></rect><circle cx="12" cy="10" r="3"></circle><path d="M7 19v-2a3 3 0 0 1 6 0v2"></path>
        </svg>
    {%- endcase -%}
    
  {%- when 'wishlist' -%}
    {%- case icon_name -%}
      {%- when 'heart' -%}
        <svg class="{{ base_class }}" {{ icon_attributes }} fill="none" stroke="currentColor" stroke-width="{{ stroke_width }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" style="width: var(--header-icon-size); height: var(--header-icon-size);">
          {%- if icon_style == 'filled' -%}
            <path fill="currentColor" d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
          {%- else -%}
            <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
          {%- endif -%}
        </svg>
      {%- when 'heart_filled' -%}
        <svg class="{{ base_class }}" {{ icon_attributes }} fill="currentColor" stroke="currentColor" stroke-width="{{ stroke_width }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" style="width: var(--header-icon-size); height: var(--header-icon-size);">
          <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
        </svg>
      {%- when 'bookmark' -%}
        <svg class="{{ base_class }}" {{ icon_attributes }} fill="none" stroke="currentColor" stroke-width="{{ stroke_width }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" style="width: var(--header-icon-size); height: var(--header-icon-size);">
          <path d="M19 21l-7-5-7 5V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2z"></path>
        </svg>
      {%- when 'star' -%}
        <svg class="{{ base_class }}" {{ icon_attributes }} fill="none" stroke="currentColor" stroke-width="{{ stroke_width }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" style="width: var(--header-icon-size); height: var(--header-icon-size);">
          <polygon points="12,2 15.09,8.26 22,9.27 17,14.14 18.18,21.02 12,17.77 5.82,21.02 7,14.14 2,9.27 8.91,8.26"></polygon>
        </svg>
    {%- endcase -%}
{%- endcase -%}